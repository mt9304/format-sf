{
  "manifest_version" : 2,
  "name" : "format-sf",
  "description" : "Formats the saleforce ticket page. ",
  "version" : "0.1",
  "content_scripts" : [
    {
      "matches" : ["https://visier.my.salesforce.com/apex/Support/Tickets*"],
      "css" : ["content.css"]
    }
  ],
  "permissions": [
    "tabs",
    "background",
    "http://*/*",
    "https://*/*"
],
  "background":
  {
    "scripts" : ["background.js"]
  },
  "browser_action" :
  {
    "default_icon" : "icon.png"
  }
}
